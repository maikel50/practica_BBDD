<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Portada">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFF283"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#673AB7"
            android:text="UEFA CHAMPIONS LEAGUE"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgUEFA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/champions" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFF283"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnClasificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="verClasificacion"
            android:text="VER CLASIFICACIÃ“N" />

        <Button
            android:id="@+id/btnVistaEquipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="verEquipos"
            android:text="VER EQUIPOS" />

        <Button
            android:id="@+id/btnInsertarEquipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="insertarEquipos"
            android:text="INSERTAR EQUIPOS" />

        <Button
            android:id="@+id/btnInsertarPartidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="insertarPartidos"
            android:text="INSERTAR PARTIDOS" />

        <Button
            android:id="@+id/btnConsultarPartidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="consultarPartidos"
            android:text="CONSULTAR PARTIDOS" />
    </LinearLayout>
</LinearLayout>